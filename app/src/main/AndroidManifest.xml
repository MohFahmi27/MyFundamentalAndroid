<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mfahmi.myfundamentalandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.mfahmi.myfundamentalandroid.READ_DATABASE" />
    <uses-permission android:name="com.mfahmi.myfundamentalandroid.WRITE_DATABASE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyFundamentalAndroid"
        tools:ignore="AllowBackup">
        <provider
            android:name=".provider.UserFavoriteProvider"
            android:authorities="com.mfahmi.myfundamentalandroid"
            android:enabled="true"
            android:exported="false"
            android:readPermission="com.fahmi.myfundamentalandroid.READ_DATABASE"
            android:writePermission="com.fahmi.myfundamentalandroid.WRITE_DATABASE" />

        <activity
            android:name=".ui.activities.FavoriteActivity"
            android:theme="@style/Theme.MyFundamentalAndroid.NoActionBar" />
        <activity
            android:name=".ui.activities.PreferenceActivity"
            android:theme="@style/Theme.MyFundamentalAndroid.NoActionBar" />
        <activity
            android:name=".ui.activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.MainActivity"
            android:theme="@style/Theme.MyFundamentalAndroid.NoActionBar" />

        <activity
            android:name=".ui.activities.DetailActivity"
            android:theme="@style/Theme.MyFundamentalAndroid.NoActionBar" />

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:enabled="true"
            android:exported="false" />
    </application>

    <queries>
        <package android:name="com.mfahmi.myfundamentalandroid" />
    </queries>

</manifest>